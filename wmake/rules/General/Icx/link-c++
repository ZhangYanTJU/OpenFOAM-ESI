#------------------------------------------------------------------------------

LINK_LIBS   = $(c++DBUG)

LINKLIBSO   = $(CC) $(c++FLAGS) -shared \
    -Xlinker --add-needed \
    -Xlinker --no-as-needed

LINKEXE     = $(CC) $(c++FLAGS) \
    -Xlinker --add-needed \
    -Xlinker --no-as-needed

#------------------------------------------------------------------------------
