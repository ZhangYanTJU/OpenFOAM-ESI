FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      blockMeshDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //
// TOP

NSLABS  4;

scale   0.1;

transform
{
    origin  (0 1 0);
    rotation none;
}

xdim  #eval{0.5 * $NSLABS};
ydim  0.2;
zdim  0.1;

nx    #eval #{ round(5 * $NSLABS) #};

vertices
(
    (0      0      0)
    ($xdim  0      0)
    ($xdim  $ydim  0)
    (0      $ydim  0)

    (0      0      $zdim)
    ($xdim  0      $zdim)
    ($xdim  $ydim  $zdim)
    (0      $ydim  $zdim)
);

blocks
(
    hex (0 1 2 3 4 5 6 7) ($nx 2 1) grading (1 1 1)
);


boundary
(
    left
    {
        type  wall;
        faces ((0 0));
    }

    right
    {
        type  wall;
        faces ((0 1));
    }

    interface   // inter-world connections
    {
        type  wall;
        faces ((0 2));
    }

    top
    {
        type  wall;
        faces ((0 3));
    }

    frontAndBack
    {
        type  empty;
        faces ((0 4) (0 5));
    }
);


// ************************************************************************* //
