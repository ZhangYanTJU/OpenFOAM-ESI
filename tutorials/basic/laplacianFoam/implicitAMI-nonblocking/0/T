    solid1_left
    {
        type            zeroGradient;
    }
    solid1_right
    {
        type            zeroGradient;
    }

    // solid2
    solid2_left
    {
        type            zeroGradient;
    }
    solid2_right
    {
        type            zeroGradient;
    }
    solid2_bottom
    {
        type            uniformFixedValue;
        uniformValue    0;
    }


    // solid1
    solid1_b_top
    {
        type            uniformFixedValue;
        uniformValue    1;
    }
    solid1_b_left
    {
        type            zeroGradient;
