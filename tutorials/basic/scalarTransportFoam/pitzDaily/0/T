FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    object      T;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 0 0 1 0 0 0];

internalField   uniform 0;

boundaryField
{
    inlet
    {
        type    uniformFixedValue;

        uniformValue
        {
            type    constant;
            value   1.0;

            // Table entries (for modified version)
            values
            (
                (0    1e-12)
                (0.1  1e-12)
                (0.10001 1.0)
            );
        }
    }

    outlet
    {
        type    zeroGradient;
    }

    upperWall
    {
        type    zeroGradient;
    }

    lowerWall
    {
        type    zeroGradient;
    }

    frontAndBack
    {
        type    empty;
    }
}


