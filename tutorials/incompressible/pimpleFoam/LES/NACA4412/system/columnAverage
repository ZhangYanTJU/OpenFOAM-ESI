columnAverage
{
    // Mandatory entries
    type            columnAverage;
    libs            (fieldFunctionObjects);

    // Note: include processorCyclics!
    patches         ( yPeriodic_half0 "proc.*throughyPeriodic_half0" );
    fields
    (
        UMean
        UPrime2Mean
    );

    // Inherited entries
    region          region0;
    enabled         true;
    log             true;
    timeStart       $tStartAvg;
    executeControl  writeTime;
    writeControl    none;
}

