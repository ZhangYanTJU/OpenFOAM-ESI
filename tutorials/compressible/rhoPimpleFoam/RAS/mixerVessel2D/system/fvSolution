FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      fvSolution;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

solvers
{
    rho
    {
        solver          PCG;
        preconditioner  DIC;
        tolerance       1e-5;
        relTol          0.1;
    }

    rhoFinal
    {
        $rho;
        relTol          0;
    }

    p
    {
        solver          GAMG;
        tolerance       1e-6;
        relTol          0.05;
        smoother        GaussSeidel;
        nCellsInCoarsestLevel 20;
    }

    pFinal
    {
        $p;
        relTol          0;
    }

    "(U|h|k|epsilon|tracer0)"
    {
        solver          smoothSolver;
        smoother        symGaussSeidel;
        tolerance       1e-5;
        relTol          0.1;
    }

    "(U|h|k|epsilon|tracer0)Final"
    {
        $U;
        tolerance       1e-5;
        relTol          0;
    }
}

PIMPLE
{
    nOuterCorrectors    1;
    nCorrectors         2;
    nNonOrthogonalCorrectors  0;
    momentumPredictor   yes;

    pMax                1.2e5;
    pMin                0.8e5;
}

relaxationFactors
{
    equations
    {
        "U.*"           1;
        "h.*"           1;
        "k.*"           1;
        "epsilon.*"     1;
    }
}


