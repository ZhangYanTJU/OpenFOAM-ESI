FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      changeDictionaryDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

boundary
{
    inletWalls
    {
        inGroups        (coupleGroup wall);
    }
}

T
{
    boundaryField
    {
        inletWalls
        {
            type        externalCoupledTemperature;
            outputTemperature   fluid;      // (fluid|wall)
            htcRefTemperature   user;       // (cell|user)

            Tref
            {
                type        expression;

                // arg() means time here
                expression  #{ arg() <= 0.1 ? 300 : 320 #};
            }
        }
    }
}


