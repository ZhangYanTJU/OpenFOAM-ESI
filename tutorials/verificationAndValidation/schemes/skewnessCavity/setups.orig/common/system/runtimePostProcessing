        {
            type            functionObject;
            functionObject  cuttingPlane;
            colourMap       blueWhiteRed;
            representation  surfaceWithEdges;
            maxGlyphLength  0.1;
            visible         yes;
            featureEdges    yes;
            colourBy        field;
            fieldName       error-grad(Cc);
            range           (-10 10);
            opacity         1;
            scalarBar
            {
                visible         no;
            }
        }
    }

    // Text data
    text
    {}
