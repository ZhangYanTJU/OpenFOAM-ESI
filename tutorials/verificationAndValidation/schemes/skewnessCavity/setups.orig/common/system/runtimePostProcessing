    colours
    {
        background      (1 1 1);
        text            (0 0 0);
        edge            (0 0 0);
        surface         (0.5 0.5 0.5);
        line            (1 0 0);
    }

    // Line data
    lines
    {}

    // Surface data
    surfaces
