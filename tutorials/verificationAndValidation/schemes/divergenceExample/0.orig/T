FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    object      T;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 0 0 0 0 0 0];

internalField   uniform 1e-8;

boundaryField
{
    top
    {
        type            zeroGradient;
    }

    bottom
    {
        type            fixedValue;
        value           uniform 0;
    }

    left
    {
        type            fixedValue;
        value           uniform 1;
    }

    right
    {
        type            zeroGradient;
    }

    frontAndBack
    {
        type            empty;
    }
}


