    {
        timeStart       0.2;
        duration        2.0;
        selectionMode   points;
        points
        (
            (2.75 0.5 0)
        );

        volumeMode      absolute;
        injectionRateSuSp
        {
            U           ((0 0.005 0) 0);
        }
    }
}


energySource1
{
    type            scalarSemiImplicitSource;
    active          yes;

