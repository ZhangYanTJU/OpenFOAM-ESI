// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

zSlice  -0.009;
ySlice  0.0;
xSlice  0.0;

actions
(
    {
        name    z;
        type    cellSet;
        action  new;
        source  boxToCell;
        box     (-100 -100 $zSlice)(100 100 100);
    }

    {
        name    zf;
        type    faceSet;
        action  new;
        source  cellToFace;
        set     z;
        option  all;
    }

    {
        name    z;
        type    cellSet;
        action  invert;
    }

    {
        name    zf;
        type    faceSet;
        action  subset;
        source  cellToFace;
        set     z;
        option  all;
    }

    // ~~~~~~~~~~~~~~~~ //

    {
        name    y;
        type    cellSet;
        action  new;
        source  boxToCell;
        box     (-100 $ySlice -100)(100 100 100);
    }

    {
        name    yf;
        type    faceSet;
        action  new;
        source  cellToFace;
        set     y;
        option  all;
    }

    {
        name    y;
        type    cellSet;
        action  invert;
    }

    {
        name    yf;
        type    faceSet;
        action  subset;
        source  cellToFace;
        set     y;
        option  all;
    }

    // ~~~~~~~~~~~~~~~~ //

    {
        name    x;
        type    cellSet;
        action  new;
        source  boxToCell;
        box     ($xSlice -100 -100)(100 100 100);
    }

    {
        name    xf;
        type    faceSet;
        action  new;
        source  cellToFace;
        set     x;
        option  all;
    }

    {
        name    x;
        type    cellSet;
        action  invert;
    }

    {
        name    xf;
        type    faceSet;
        action  subset;
        source  cellToFace;
        set     x;
        option  all;
    }
);


